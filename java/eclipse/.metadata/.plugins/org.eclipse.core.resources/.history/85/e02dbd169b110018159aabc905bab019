package helloworld;

public class Person
{
	String name;
	int age;
	boolean isMale;
	
	public Person()
	{
		super();
		this.name = "Na'onac";
		this.age = 1425;
		this.isMale = true;
	}
	
	public Person(String name, int age, boolean isMale)
	{
		super();
		this.name = name;
		this.age = age;
		this.isMale = isMale;
	}
	
	@Override
	public String toString()
	{
		return name + " (" + age + ", " + (this.isMale ? "male" : "female") + ")";  
	}

	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + age;
		result = prime * result + (isMale ? 1231 : 1237);
		result = prime * result + ((name == null) ? 0 : name.hashCode());
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (!(this instanceof Person))
			return false;
		Person other = (Person)obj;
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Person other = (Person) obj;
		if (age != other.age)
			return false;
		if (isMale != other.isMale)
			return false;
		if (name == null) {
			if (other.name != null)
				return false;
		} else if (!name.equals(other.name))
			return false;
		return true;
	}
	
	
}
